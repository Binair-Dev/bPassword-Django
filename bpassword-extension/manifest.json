{
  "manifest_version": 3,
  "name": "bPassword Manager",
  "version": "1.0.0",
  "description": "Gestionnaire de mots de passe bPassword pour Chrome/Brave",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://bpassword.b-services.be/*",
    "http://bpassword.b-services.be/*",
    "http://localhost:8001/*",
    "https://localhost:8001/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "bPassword"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

# Configuration de sécurité
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# HTTPS/TLS
ENABLE_HTTPS=False
SECURE_HSTS_SECONDS=31536000

# Base de données
DATABASE_URL=sqlite:///db.sqlite3

# Chiffrement (optionnel - par défaut utilise SECRET_KEY)
ENCRYPTION_KEY=your-encryption-key-here

# Validation de complexité des mots de passe
ENABLE_PASSWORD_COMPLEXITY_VALIDATION=True
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True
ENABLE_STORED_PASSWORD_WARNING=True

# Rate limiting API
ENABLE_API_RATE_LIMIT=True
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Audit logging
ENABLE_AUDIT_LOGGING=True
AUDIT_LOG_SENSITIVE_DATA=False

# Security headers
ENABLE_SECURITY_HEADERS=True